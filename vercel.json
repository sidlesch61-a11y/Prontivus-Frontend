{
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "https://prontivus-backend-wnw2.onrender.com/api/v1"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://prontivus-backend-wnw2.onrender.com/api/v1"
    }
  }
}

